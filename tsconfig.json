{
    "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types": ["node", "jest", "jquery"]
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
}
